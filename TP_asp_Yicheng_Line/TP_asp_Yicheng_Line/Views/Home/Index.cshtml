@using TP_asp_Yicheng_Line.DB.Models
@model AcceuilViewModel

<div class="text-center">
    <h1 class="display-4">Bienvenu sur la gestion des stocks</h1>
    <h2 class="display-4">Liste de produit</h2>

    <table class="table">
        <tr>
            <td class="display-5">Identifiant</td>
            <td class="display-5">Titre</td>
            <td class="display-5">Prix</td>
            <td class="display-5">Identifiant Catégorie</td>

        </tr>


        @foreach (Product product in Model.Products)
        {
            <tr>
                <td>@product.Identifiant</td>
                <td>@product.Titre</td>
                <td>@product.Prix</td>
                <td>@product.IdentifiantCategory</td>

            </tr>
        }

    </table>

    <table class="table">
        <tr>
            <td class="display-5">Identitifant</td>
            <td class="display-5">Libellé</td>
            <td class="display-5">Date</td>
        </tr>

        @foreach (Category category in Model.Categories)
        {
            <tr>
                <td>@category.Identifiant </td>
                <td>@category.Libelle</td>
                <td>@category.Date</td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>





    <p>Learn about <a href="https://github.com/tawfiqct">building Web apps with diverse computing technologies on github.com/tawfiqct</a>.</p>
</div>
